<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

     <TextView
         android:id="@+id/main_password"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="21sp"
         android:layout_below="@+id/main_name"
         android:layout_marginTop="15dp"
         
         android:text="Password:" />

     <TextView
         android:id="@+id/main_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="21sp"
         android:layout_alignParentTop="true"
         android:layout_marginTop="40dp"
         android:text="Name:" />

     <EditText
         android:id="@+id/main_edit_password"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/main_password"
         android:layout_alignParentRight="true"
         android:ems="10"
         android:hint="your password"
         android:inputType="textPassword" />

     <EditText
         android:id="@+id/main_edit_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/main_password"
         android:layout_alignParentRight="true"
         android:ems="10"
         android:hint="your name" />

     <Button
         android:id="@+id/main_register"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/main_login"
         android:layout_alignBottom="@+id/main_login"
         android:layout_alignRight="@+id/main_edit_password"
         android:layout_marginRight="22dp"
         android:text="Register" />

     <Button
         android:id="@+id/main_login"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/main_password"
         android:layout_marginBottom="123dp"
         android:text="Log In" />

</RelativeLayout>
