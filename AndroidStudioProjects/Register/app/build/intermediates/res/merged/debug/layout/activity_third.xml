<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ThirdActivity" >

    <TextView
        android:id="@+id/third_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Name:"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/third_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/third_name"
        android:layout_below="@+id/third_name"
        android:layout_marginTop="16dp"
        android:text="Age:"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/third_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/third_age"
        android:layout_below="@+id/third_age"
        android:layout_marginTop="26dp"
        android:text="Gender:"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/third_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/third_gender"
        android:layout_below="@+id/third_gender"
        android:layout_marginTop="24dp"
        android:text="Asset:"
        android:textSize="21sp" />

    <Button
        android:id="@+id/third_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/third_asset"
        android:layout_below="@+id/third_asset"
        android:layout_marginTop="22dp"
        android:text="Back" />

    <EditText
        android:id="@+id/third_edit_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/third_gender"
        android:layout_alignLeft="@+id/third_edit_name"
        
        android:ems="10" />

    <EditText
        android:id="@+id/third_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/third_name"
        android:layout_toRightOf="@+id/third_back"
        android:ems="10" />

    <EditText
        android:id="@+id/third_edit_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/third_gender"
        android:layout_alignLeft="@+id/third_edit_age"
        android:ems="10" />

     

    <EditText
        android:id="@+id/third_edit_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/third_asset"
        android:layout_alignLeft="@+id/third_edit_gender"
        android:ems="10" />

</RelativeLayout>
