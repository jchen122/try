<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jiaweichen.myproj.SecondActivity"
    tools:showIn="@layout/activity_second">

    <EditText
        android:id="@+id/second_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:hint="Your Name:" />

    <EditText
        android:id="@+id/second_edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:hint="Your Phone:" />

    <CheckBox
        android:id="@+id/second_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/second_house"
        android:layout_toEndOf="@+id/second_edit_phone"
        android:layout_toRightOf="@+id/second_edit_phone"
        android:text="Car" />

    <CheckBox
        android:id="@+id/second_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House"
        android:layout_below="@+id/second_radio_group"
        android:layout_toLeftOf="@+id/second_save"
        android:layout_toStartOf="@+id/second_save"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/second_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Save"
        android:layout_below="@+id/second_house"
        android:layout_alignLeft="@+id/second_edit_name"
        android:layout_alignStart="@+id/second_edit_name"
        android:layout_marginTop="38dp" />

    <RadioGroup
        android:id="@+id/second_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_edit_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp">

        <RadioButton
            android:id="@+id/second_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignEnd="@+id/second_radio_group"
            android:layout_alignRight="@+id/second_radio_group"
            android:layout_below="@+id/second_edit_phone"
            android:text="Male" />

        <RadioButton
            android:id="@+id/second_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/second_male"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Female" />

    </RadioGroup>


</RelativeLayout>
